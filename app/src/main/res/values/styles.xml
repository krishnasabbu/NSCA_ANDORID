<resources>
    <style name="Theme.SmsReader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/cricket_green</item>
        <item name="colorPrimaryVariant">@color/cricket_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cricket_accent</item>
        <item name="colorSecondaryVariant">@color/cricket_accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/cricket_green_dark</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.SmsReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_welcome_card"
            android:padding="24dp"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Dashboard ðŸ“Š"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWelcomeSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your cricket academy efficiently"
                android:textColor="@color/green_light_text"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- SECTION: Academy Overview -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academy Overview"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="12dp" />

        <!-- Stats Grid -->
        <GridLayout
            android:id="@+id/statsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="false"
            android:columnOrderPreserved="false" />

        <!-- SECTION: Management Tools -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Management Tools"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginVertical="16dp" />

        <!-- Quick Actions Grid -->
        <GridLayout
            android:id="@+id/actionsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins" />

        <!-- SECTION: Recent Registrations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Registrations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/recentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
